{
  "name": "@foton/core",
  "version": "0.1.0",
  "description": "Foton: build TON dApps with ease",
  "keywords": [
    "TON",
    "Blockchain",
    "dApp",
    "DAP",
    "DEFI",
    "Tact"
  ],
  "license": "ISC",
  "author": "vanishmax",
  "repository": {
    "type": "git",
    "url": "https://github.com/vanishmax/foton.git"
  },
  "homepage": "https://github.com/vanishmax/foton/tree/main/packages/core",
  "bugs": "https://github.com/vanishmax/foton/issues",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --minify --format cjs,esm --out-dir ./dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@foton/api": "workspace:*",
    "@ton/core": "^0.56.3",
    "@tonconnect/sdk": "^3.0.2",
    "@tonconnect/ui": "^2.0.2",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "tsup": "^8.0.2"
  }
}
